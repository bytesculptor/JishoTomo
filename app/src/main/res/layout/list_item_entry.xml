<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <data>
    <variable
        name="presenter"
        type="net.emojiparty.android.jishotomo.data.SearchResultEntry"
        />
  </data>

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="@{() -> presenter.openDefinitionActivity(context)}">

    <TextView
        android:id="@+id/li_kanji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:singleLine="true"
        android:text="@{presenter.getKanjiOrReading()}"
        android:textSize="@dimen/text_size_list_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="猫"
        />
    <TextView
        android:id="@+id/li_reading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@{presenter.getReading()}"
        android:textSize="@dimen/text_size_body"
        app:layout_constraintBaseline_toBaselineOf="@id/li_kanji"
        app:layout_constraintBottom_toBottomOf="@+id/li_kanji"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/li_kanji"
        tools:text="ねこ"
        />
    <TextView
        android:id="@+id/li_gloss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="24dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@{presenter.getPrimaryGloss()}"
        android:textSize="@dimen/text_size_body"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/li_kanji"
        app:layout_constraintTop_toBottomOf="@+id/li_kanji"
        tools:text="cats are so cute wow i love them all with their jelly bean toes"
        />

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/divider"
        />

  </android.support.constraint.ConstraintLayout>
</layout>

